	<sub-flow name="implement-update-employee-By-IdSub_Flow" doc:id="485e3472-e9c8-4a5a-b48e-459d9f077edf" >
	<db:update doc:name="Update" doc:id="92522347-0b65-4d12-872a-73599058d2e0" config-ref="Database_Config">
			<db:sql ><![CDATA[UPDATE employees SET firistName = :firistName,lastName = :lastName,age = :age,salary = :salary WHERE id= :id ]]></db:sql>
			<db:input-parameters ><![CDATA[#[{
	'id': payload.id, 'firistName': payload.firistName, 'lastName': payload.lastName,'age':payload.age,'salary': payload.salary
}]]]></db:input-parameters>
		</db:update>
        <ee:transform doc:name="Transform Message">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
            </ee:message>
        </ee:transform>
	</sub-flow>
